{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates a VPC, Subnet, Security Group and IAM role",
    "Resources": {
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "VPC for EC2"
                    }
                ]
            }
        },
        "Subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "10.0.0.0/24",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Subnet for EC2"
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security group allow-ssh",
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "10.0.0.0/16",
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Security Group for EC2"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "SubnetId": {
            "Value": {
                "Ref": "Subnet"
            },
            "Description": "Subnet"
        },
        "SecurityGroupId": {
            "Value": {
                "Ref": "SecurityGroup"
            },
            "Description": "Security Group that controls the traffic for EC2 instances "
        }
    }
}